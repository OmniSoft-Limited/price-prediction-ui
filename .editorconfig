# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Unix-style newlines with a newline at the end of files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# Override for JSON, YAML, Markdown, and config files
[*.{json,yml,yaml,md,graphql}]
indent_style = space
indent_size = 4

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 4

# CSS, SCSS, Tailwind, and other style files
[*.{css,scss,less,pcss}]
indent_style = space
indent_size = 4

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg,webp,woff,woff2,eot,ttf}]
indent_style = unset
